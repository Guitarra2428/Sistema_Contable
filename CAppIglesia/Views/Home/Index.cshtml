@model CAppIglesia.Models.ModelVm.CarteraVM
@{
    ViewData["Title"] = "Sistema Contable IBPD";
}


<header>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{int cont = 0; }
            @foreach (var item in Model.Sliders)
            {
                var itemDinamico = cont++ == 0 ? "item active" : "item";
                <div class="carousel-item @itemDinamico ">
                    <img src="@Url.Content(item.UrlImagen)" style="width:100%; height:400px;" />
                    <h1 class="text-dark text-center">@Html.Raw(item.Nombre)</h1>
                </div>


            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>

    </div>


</header>




