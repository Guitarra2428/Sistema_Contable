@model CAppIglesia.Models.Registros
@{
    ViewData["Title"] = "Sistema Contable IBPD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="container">
    <div class="row card px-2 ax-2 mx-4 border">

        <div class="col-12 offset-1">
            <h1 class="text-center"> Registrar Donante</h1>
        </div>

        <div class="col-8 offset-2 ">
            <form method="post" asp-action="Editar">
                <input type="hidden" asp-for="OfrendaID"/>
                <div asp-validation-summary="ModelOnly " class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PrimerNombre" class="label-control"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PrimerNombre" class="form-control" />
                        <span asp-validation-for="PrimerNombre"></span>
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="PrimerApellido" class="label-control"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PrimerApellido" class="form-control" />
                        <span asp-validation-for="PrimerApellido"></span>
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Concepto" class="label-control"></label>

                    </div>

                    <div class="col-8">
                        <input asp-for="Concepto" class="form-control" />
                        <span asp-validation-for="Concepto"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cantidad" class="label-control"></label>

                    </div>

                    <div class="col-8">
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad"></span>
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="FechaDePago" class="label-control"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="FechaDePago" class="form-control" />
                        <span asp-validation-for="FechaDePago"></span>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-6 ">
                        <input type="submit" class="btn btn-success btn-block" value="Actualizar" />

                    </div>
                    <div class="col-6 ">
                        <a asp-action="Index" class="btn btn-primary btn-block"> Regresar</a>

                    </div>

                </div>

            </form>
        </div>

    </div>
</div>



